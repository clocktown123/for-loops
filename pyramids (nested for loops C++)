#include <iostream>
using namespace std;

int num = 1;

int main() {

	for (int i = 0; i < 7; i++) {
		for (int j = 1; j < i; j++) {
			cout << "*";
		}
		cout << endl;
	}

	cout << endl;

	for (int i = 6; i > -1; i -= 1) {
		for (int j = 1; j < i; j++) {
			cout << "*";
		}
		cout << endl;
	}

	cout << endl;

	for (int i = 6; i > 0; i--) {
		for (int j = 1; j <= 6; j++) {
			if (j >= i) {
				cout << "*";
			}
			else {
				cout << " ";
			}
		}
		cout << endl;
	}

	cout << endl;

	for (int i = 9; i > 0; i--) {
		for (int j = 1; j <= 9 - i; j++) {
			if (j <= i) {
				cout << "*";
			}
			else {
				cout << " ";
			}
		}
		cout << endl;
	}

	cout << endl;

	int n = 5;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j <= i; j++) {
			cout << num << " ";
		}
		num = num + 1;

		cout << endl;

	}

}
